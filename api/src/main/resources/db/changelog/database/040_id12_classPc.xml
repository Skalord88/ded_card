    <changeSet id="12" author="oscar">
        <createTable tableName="class_pc">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="level" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="first_class" type="BOOLEAN">
                <constraints nullable="false" />
            </column>
            <column name="character_card_id" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="class_character_id" type="INT">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

