<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

  <changeSet id="5" author="damian">
      <createTable tableName="race">
        <column name="id" type="SMALLINT" autoIncrement="true">
          <constraints primaryKey="true"/>
        </column>
        <column name="races_name" type="varchar(255)">
          <constraints nullable="false"/>
        </column>
        <column name="sub_race_name" type="varchar(255)">
          <constraints nullable="false"/>
        </column>
        <column name="size" type="varchar(255)">
          <constraints nullable="false"/>
        </column>
        <column name="speed" type="int">
          <constraints nullable="false"/>
        </column>
        <column name="abilitys" type="varchar(255)">
          <constraints nullable="true"/>
        </column>
        <column name="skills" type="varchar(255)">
          <constraints nullable="true"/>
        </column>
        <column name="level_adjustment" type="TINYINT">
          <constraints nullable="true"/>
        </column>
        <column name="armor_class" type="varchar(255)">
          <constraints nullable="true"/>
        </column>
        <column name="avatar_url" type="varchar(255)">
          <constraints nullable="false"/>
        </column>
      </createTable>
  </changeSet>
</databaseChangeLog>