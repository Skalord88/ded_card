<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="401" author="oscar">
        <createTable tableName="spells">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="school" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="level" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="components" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="casting_time" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="range" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="area" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="effect" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="target" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="duration" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="saving_throw" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="spell_resistance" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="descriptive_text" type="varchar(10000)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
