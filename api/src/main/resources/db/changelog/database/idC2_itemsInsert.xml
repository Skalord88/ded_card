        <column name="critical" value="X2_1920"/>
        <column name="range" value="10"/>
        <column name="weight" value="1.0"/>
        <column name="type" value="['PIERCING_OR_SLASHING','SIMPLE','LIGHT']"/>
        <column name="description" value="You get a +2 bonus on Sleight of Hand checks made to conceal a dagger on your body (see the Sleight of Hand skill)."/>
    </insert>
    <insert tableName="items">
        <column name="item_type" value="WEAPON"/>
        <column name="weapon_name" value="LONGSPEAR"/>
        <column name="cost" value="5.0"/>
        <column name="damage" value="D8"/>
        <column name="critical" value="X3"/>
        <column name="weight" value="9.0"/>
        <column name="type" value="['PIERCING','SIMPLE','TWO_HANDED']"/>
        <column name="description" value="A longspear has reach. You can strike opponents 10 feet away with it, but you can’t use it against an adjacent foe. If you use a ready action to set a longspear against a charge, you deal double damage on a successful hit against a charging character."/>
    </insert>
    <insert tableName="items">
        <column name="item_type" value="WEAPON"/>
        <column name="weapon_name" value="JAVELIN"/>
        <column name="cost" value="1.0"/>
        <column name="damage" value="D6"/>
        <column name="critical" value="X2"/>
        <column name="range" value="30"/>
        <column name="weight" value="2.0"/>
        <column name="type" value="['PIERCING','SIMPLE','RANGED']"/>
        <column name="description" value="Since it is not designed for melee, you are treated as nonproficient with it and take a -4 penalty on attack rolls if you use a javelin as a melee weapon."/>
    </insert>
    <insert tableName="items">
        <column name="item_type" value="WEAPON"/>
        <column name="weapon_name" value="GLAIVE"/>
        <column name="cost" value="8.0"/>
        <column name="damage" value="D10"/>
        <column name="critical" value="X3"/>
        <column name="weight" value="10.0"/>
        <column name="type" value="['SLASHING','MARTIAL','TWO_HANDED','REACH']"/>
        <column name="description" value="A glaive has reach. You can strike opponents 10 feet away with it, but you can’t use it against an adjacent foe."/>
    </insert>
    <insert tableName="items">
        <column name="item_type" value="ARMOR"/>
        <column name="armor_name" value="Padded"/>
        <column name="cost" value="5.0"/>
        <column name="weight" value="10.0"/>
        <column name="armor_class" value="1"/>
        <column name="description" value="Light armor"/>
    </insert>

