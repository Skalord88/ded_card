<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

  <changeSet id="201" author="oscar">
      <createTable tableName="feats">
        <column name="id" type="int" autoIncrement="true">
          <constraints primaryKey="true"/>
        </column>
        <column name="feat_name" type="varchar(255)">
          <constraints nullable="true"/>
        </column>
        <column name="prerequisites" type="varchar(255)">
          <constraints nullable="true"/>
        </column>
        <column name="benefit" type="varchar(10000)">
          <constraints nullable="true"/>
        </column>
        <column name="normal" type="varchar(10000)">
          <constraints nullable="true"/>
        </column>
        <column name="special" type="varchar(10000)">
          <constraints nullable="true"/>
        </column>
        <column name="modifiers" type="json">
          <constraints nullable="true"/>
        </column>
        <column name="type" type="json">
          <constraints nullable="true"/>
        </column>
      </createTable>
  </changeSet>
</databaseChangeLog>