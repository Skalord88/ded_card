<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet id="10" author="oscar">
        <createTable tableName="size">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="size" type="varchar(50)">
                <constraints nullable="true" />
            </column>
            <column name="bonus" type="INT">
                <constraints nullable="true" />
            </column>
            <column name="hide" type="INT">
                <constraints nullable="true" />
            </column>
            <column name="grapple" type="INT">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>